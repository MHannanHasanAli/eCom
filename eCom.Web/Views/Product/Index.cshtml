<h1>Product Index</h1>

<table>
    <thead>
        <tr>
            <td>
                Product Name
            </td>

            <td>
                Category
            </td>
            <td>
                Price
            </td>
            <td>
                Actions
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.name
                </td>

                <td>
                    @*@item.category*@
                </td>
                <td>
                    @item.price
                </td>
                <td>
                    <button>Edit</button>
                    <button>Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

